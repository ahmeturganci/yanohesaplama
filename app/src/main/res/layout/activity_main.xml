<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.au.yanoh.yanoh.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textSize="30dp"
        android:text="Ders Sayısını Giriniz:"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:id="@+id/etDersSayisi"
        android:layout_width="300dp"
        android:inputType="number"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:hint="Ders Sayısı"
        android:background="@color/colorPrimary"/>
    <Button
        android:id="@+id/btnGecis"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="GANO HESAPLA"
        android:textSize="20dp"
        android:background="#9055A2"
        android:textColor="#fff"/>

</LinearLayout>
